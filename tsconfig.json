{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": "./",
		"typeRoots": ["./node_modules/@types", "./src/types"]
	},
	"include": ["src/**/*", "src/prisma.ts"],
	"exclude": ["node_modules", "**/*.test.ts"]
}
